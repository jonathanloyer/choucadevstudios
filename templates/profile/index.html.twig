{% extends 'layout.html.twig' %}

{% block title %}Mon profil — ChoucaDev Studios{% endblock %}

{% block body %}

<div class="max-w-3xl mx-auto mt-10 p-6 bg-slate-900 border border-slate-800 rounded-xl shadow-lg">
    
    <h1 class="text-2xl font-semibold text-cyan-400 mb-6">
        Mon profil
    </h1>

    {# Affichage des messages flash #}
    {% for message in app.flashes('success') %}
        <div class="mb-4 p-3 rounded bg-green-700 text-green-100 text-sm">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(profileForm, { attr: { class: 'space-y-4' } }) }}

        <div class="space-y-2">
            {{ form_label(profileForm.email, null, { label_attr: { class: 'text-sm text-slate-300' } }) }}
            {{ form_widget(profileForm.email, { attr: { class: 'w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded text-slate-200' } }) }}
            {{ form_errors(profileForm.email) }}
        </div>

        <div class="space-y-2">
            {{ form_label(profileForm.pseudo, null, { label_attr: { class: 'text-sm text-slate-300' } }) }}
            {{ form_widget(profileForm.pseudo, { attr: { class: 'w-full px-3 py-2 bg-slate-800 border border-slate-700 rounded text-slate-200' } }) }}
            {{ form_errors(profileForm.pseudo) }}
        </div>

        <button type="submit"
                class="mt-4 px-4 py-2 bg-cyan-500 text-slate-950 font-semibold rounded hover:bg-cyan-400 transition">
            Mettre à jour
        </button>

    {{ form_end(profileForm) }}
</div>

{% endblock %}
