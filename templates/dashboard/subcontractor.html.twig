{% extends 'layout.html.twig' %}

{# ========================
   SEO : titre + meta description + NOINDEX (zone privée)
   ======================== #}
{% block title %}
  Espace sous-traitant — ChoucaDev Studios
{% endblock %}

{% block meta_description %}
  Espace sous-traitant de ChoucaDev Studios : consultation et téléchargement sécurisés
  des documents transmis dans le cadre de vos missions (devis, factures, annexes techniques).
{% endblock %}

{# On ne veut pas que l’espace sous-traitant soit indexé par Google #}
{% block robots %}noindex,nofollow{% endblock %}

{% block body %}
<section class="max-w-6xl mx-auto px-4 py-10">

  {# Header #}
  <header class="mb-8">
    <p class="text-[11px] uppercase tracking-[0.2em] text-cyan-400 mb-1">
      Espace sous-traitant
    </p>
    <h1 class="text-2xl sm:text-3xl font-semibold mb-2">
      Bonjour {{ app.user ? app.user.fullName ?: app.user.email : '' }}
    </h1>
    <p class="text-sm text-slate-300 max-w-2xl">
      Retrouvez ici l’ensemble des documents que ChoucaDev Studios met à votre disposition
      dans le cadre de vos missions (devis, factures, annexes techniques, etc.).
    </p>
  </header>

  {# Calcul simple pour les "nouveaux" documents (jamais consultés) #}
  {% set unreadCount = 0 %}
  {% for d in documents %}
    {% if not d.viewed %}
      {% set unreadCount = unreadCount + 1 %}
    {% endif %}
  {% endfor %}

  <div class="space-y-8">

    {# Carte de synthèse #}
    <section class="rounded-2xl border border-slate-800 bg-slate-900/70 px-5 py-4 shadow-lg shadow-slate-950/30"
             aria-labelledby="sub-summary-title">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h2 id="sub-summary-title"
              class="text-[11px] font-semibold uppercase tracking-[0.2em] text-slate-400 mb-1">
            Synthèse de vos documents
          </h2>

          {% if documents is empty %}
            <p class="text-sm text-slate-200">
              Aucun document ne vous a encore été attribué pour le moment.
            </p>
          {% else %}
            <p class="text-sm text-slate-200">
              Vous disposez actuellement de documents mis à disposition dans votre espace sous-traitant.
              Utilisez le tableau ci-dessous pour les télécharger.
            </p>
          {% endif %}
        </div>

        <div class="flex items-center gap-6">
          <div class="text-right">
            <p class="text-[11px] uppercase tracking-[0.15em] text-slate-400">
              Total documents
            </p>
            <p class="text-2xl font-semibold text-cyan-300 leading-tight">
              {{ documents|length }}
            </p>
          </div>

          <div class="hidden sm:block h-10 w-px bg-slate-700/80" aria-hidden="true"></div>

          <div class="text-right">
            <p class="text-[11px] uppercase tracking-[0.15em] text-slate-400">
              Nouveaux
            </p>
            <p class="text-xl font-semibold {{ unreadCount > 0 ? 'text-emerald-300' : 'text-slate-500' }} leading-tight">
              {{ unreadCount }}
            </p>
          </div>
        </div>
      </div>
    </section>

    {# Liste des documents #}
    <section class="rounded-2xl border border-slate-800 bg-slate-900/70 p-5 shadow-lg shadow-slate-950/30"
             aria-labelledby="sub-documents-title">
      <div class="flex items-center justify-between mb-4 gap-3">
        <div>
          <h2 id="sub-documents-title" class="text-sm font-semibold text-slate-100">
            Documents reçus
          </h2>
          <p class="text-xs text-slate-400">
            Devis, factures ou autres documents transmis par l’administrateur ChoucaDev Studios.
          </p>
        </div>

        {% if documents is not empty %}
          <span class="inline-flex items-center rounded-full bg-slate-800 px-3 py-1 text-[10px] font-medium text-slate-200">
            {{ documents|length }} document{{ documents|length > 1 ? 's' : '' }}
          </span>
        {% endif %}
      </div>

      {% if documents is empty %}
        <div class="rounded-xl border border-dashed border-slate-700 bg-slate-950/40 px-4 py-6 text-center">
          <p class="text-xs text-slate-400 mb-1">
            Aucun document n’a encore été attribué à votre espace.
          </p>
          <p class="text-[11px] text-slate-500">
            Vous recevrez ici les pièces nécessaires à vos missions (briefs, devis, factures, comptes-rendus, etc.).
          </p>
        </div>
      {% else %}
        <div class="overflow-x-auto rounded-xl border border-slate-800/70 bg-slate-950/40">
          <table class="min-w-full text-xs text-left" aria-describedby="sub-documents-title">
            <thead class="border-b border-slate-800 text-slate-400 bg-slate-950/60">
              <tr>
                <th scope="col" class="px-4 py-2">Type</th>
                <th scope="col" class="px-4 py-2">Nom du fichier</th>
                <th scope="col" class="px-4 py-2">Date d’envoi</th>
                <th scope="col" class="px-4 py-2">Statut</th>
                <th scope="col" class="px-4 py-2 text-right">Action</th>
              </tr>
            </thead>
            <tbody>
            {% for doc in documents %}
              <tr class="border-b border-slate-800/60 last:border-b-0">
                {# Type #}
                <td class="px-4 py-2 align-middle">
                  {% if doc.type == 'quote' %}
                    <span class="inline-flex items-center rounded-full bg-amber-500/20 px-2 py-0.5 text-[10px] font-medium text-amber-300">
                      Devis
                    </span>
                  {% elseif doc.type == 'invoice' %}
                    <span class="inline-flex items-center rounded-full bg-emerald-500/20 px-2 py-0.5 text-[10px] font-medium text-emerald-300">
                      Facture
                    </span>
                  {% else %}
                    <span class="inline-flex items-center rounded-full bg-slate-700/60 px-2 py-0.5 text-[10px] font-medium text-slate-200">
                      {{ doc.typeLabel }}
                    </span>
                  {% endif %}
                </td>

                {# Nom du fichier #}
                <td class="px-4 py-2 text-slate-100 truncate max-w-[260px]">
                  {{ doc.originalFilename }}
                </td>

                {# Date d’envoi #}
                <td class="px-4 py-2 text-slate-400 whitespace-nowrap">
                  {{ doc.sentAt ? doc.sentAt|date('d/m/Y') : '-' }}
                </td>

                {# Statut (nouveau / consulté) #}
                <td class="px-4 py-2">
                  {% if not doc.viewed %}
                    <span class="inline-flex items-center rounded-full bg-cyan-500/15 px-2 py-0.5 text-[10px] font-medium text-cyan-300">
                      Nouveau
                    </span>
                  {% else %}
                    <span class="inline-flex items-center rounded-full bg-slate-700/60 px-2 py-0.5 text-[10px] font-medium text-slate-300">
                      Consulté
                    </span>
                  {% endif %}
                </td>

                {# Action de téléchargement #}
                <td class="px-4 py-2 text-right">
                  <a href="{{ path('subcontractor_billing_download', { id: doc.id }) }}"
                     class="inline-flex items-center rounded-full bg-cyan-500 px-4 py-1.5 text-[11px] font-semibold text-slate-950 hover:bg-cyan-400 transition">
                    Télécharger
                  </a>
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      {% endif %}
    </section>

  </div>
</section>
{% endblock %}
