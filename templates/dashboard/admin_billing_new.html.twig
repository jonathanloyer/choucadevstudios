{% extends 'layout.html.twig' %}

{% block title %}Ajouter un document â€” Admin{% endblock %}

{% block body %}
<section class="max-w-xl mx-auto px-4 py-10">
  <h1 class="text-2xl sm:text-3xl font-semibold mb-6">
    Ajouter un devis / une facture
  </h1>

  {% for message in app.flashes('success') %}
    <div class="mb-4 rounded border border-emerald-500/60 bg-emerald-500/10 px-3 py-2 text-sm text-emerald-200">
      {{ message }}
    </div>
  {% endfor %}

  {{ form_start(form, { attr: { class: 'space-y-4' } }) }}

    <div>
      {{ form_label(form.client, null, { label_attr: { class: 'text-xs font-medium text-slate-300' } }) }}
      {{ form_widget(form.client, { attr: { class: 'w-full rounded-lg border border-slate-700 bg-slate-950/80 px-3 py-2 text-sm text-slate-100' } }) }}
      {{ form_errors(form.client) }}
    </div>

    <div>
      {{ form_label(form.type, null, { label_attr: { class: 'text-xs font-medium text-slate-300' } }) }}
      {{ form_widget(form.type, { attr: { class: 'w-full rounded-lg border border-slate-700 bg-slate-950/80 px-3 py-2 text-sm text-slate-100' } }) }}
      {{ form_errors(form.type) }}
    </div>

    <div>
      {{ form_label(form.file, null, { label_attr: { class: 'text-xs font-medium text-slate-300' } }) }}
      {{ form_widget(form.file, { attr: { class: 'w-full rounded-lg border border-slate-700 bg-slate-950/80 px-3 py-2 text-sm text-slate-100' } }) }}
      {{ form_errors(form.file) }}
    </div>

    <button
      type="submit"
      class="inline-flex items-center rounded-full bg-cyan-500 px-6 py-2.5 text-sm font-semibold text-slate-950 shadow-lg shadow-cyan-500/30 hover:bg-cyan-400 transition"
    >
      Enregistrer le document
    </button>

  {{ form_end(form) }}
</section>
{% endblock %}
